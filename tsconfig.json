{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist/functions",
        "types": ["node", "jsonwebtoken"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true
    },
    "include": [
        "netlify/functions/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "netlify/functions/**/*.d.ts"
    ]
}